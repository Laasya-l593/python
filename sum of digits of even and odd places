n=int(input())  
n1=str(n)
count=0
s=""                             
p=""
while(n!=0):
    r=n%10
    n=n//10
    count=count+1
print(count)
for i in range(0,count+1,2):
    s=s+n1[i]
b=int(s)
s1=0
while(b!=0):
    r=b%10
    b=b//10
    s1=s1+r
print(s1)
for i in range(1,count,2):
    p=p+n1[i]
c=int(p)
s2=0
while(c!=0):
    r=c%10
    c=c//10
    s2=s2+r
print(s2)
